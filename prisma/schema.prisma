datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  name      String?
  surname   String?
  phone     String?
  salt      String
  password  String
  lastLoginIpAddress String
  currentLoggedInAt DateTime
  lastLoggedInAt DateTime
  createdAt DateTime @default(now())
}

model Hotel {
  id          Int      @id @default(autoincrement())
  name        String
  star        Int
  address     String
  city        String
  country     String
  phone       String
  email       String
  website     String
  zip_code    String
  description String
}
